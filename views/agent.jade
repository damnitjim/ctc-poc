extends ./layout.jade

script(type="text/javascript", src="//media.twiliocdn.com/sdk/js/client/v1.4/twilio.min.js")

block content
  .container
    h1 Agent Panel
    p
      This page provides the following to agents:
    ul
        li alert on incoming call when available
        li set availability status
        li accept a call
        li terminate a call

    hr

    // C2C contact form
    .row
        .col-md-6
            h2 Control
            hr
            .input-group
                input.form-control(type='text', id='agentName', placeholder='Agent Name')
                span.input-group-btn
                    button#login-button.btn.btn-default(type='button') Login
            &nbsp;
            button#accept.btn.btn-lg.btn-block.btn-success(disabled, type='button') Accept
            button#hold.btn.btn-lg.btn-block.btn-warning(disabled, type='button') Hold

        .col-md-6
            h2 Status
            hr
            .alert.alert-info
                strong Agent: 
                span#agent-name &empty;
            .alert.alert-warning
                strong Alerting Call: 
                span#alert &empty;
            .alert.alert-success
                strong Active Call: 
                span#active &empty;

